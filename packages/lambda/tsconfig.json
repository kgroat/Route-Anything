{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["tests", "dist"]
}
