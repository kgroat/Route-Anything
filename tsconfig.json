{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018"],
    "module": "ES2015",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["tests", "dist"]
}
